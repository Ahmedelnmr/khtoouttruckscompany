@model IEnumerable<Khutootcompany.Application.Interfaces.AuditLogDto>

@{
    ViewData["Title"] = "سجل التغييرات";
    var filterTitle = ViewBag.FilterTitle as string ?? "سجل التغييرات";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-history"></i> @filterTitle
            <span class="badge bg-primary">@Model.Count() عملية</span>
        </h1>
        <div>
            <a href="/AuditLogs/Report" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> التقرير التفصيلي
            </a>
            <a href="/AuditLogs/UserActivity" class="btn btn-success">
                <i class="fas fa-users"></i> نشاط المستخدمين
            </a>
            <a href="/AuditLogs/EntityTypes" class="btn btn-warning">
                <i class="fas fa-database"></i> أنواع الكيانات
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        @{
            var addedCount = Model.Count(l => l.Action == "Added");
            var modifiedCount = Model.Count(l => l.Action == "Modified");
            var deletedCount = Model.Count(l => l.Action == "Deleted");
            var uniqueUsers = Model.Select(l => l.PerformedBy).Distinct().Count();
        }

        <div class="col-md-3">
            <div class="card shadow text-center dashboard-card bg-success text-white">
                <div class="card-body">
                    <i class="fas fa-plus-circle fa-3x mb-3"></i>
                    <h6>إضافات</h6>
                    <h2>@addedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow text-center dashboard-card bg-warning text-dark">
                <div class="card-body">
                    <i class="fas fa-edit fa-3x mb-3"></i>
                    <h6>تعديلات</h6>
                    <h2>@modifiedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow text-center dashboard-card bg-danger text-white">
                <div class="card-body">
                    <i class="fas fa-trash fa-3x mb-3"></i>
                    <h6>حذف</h6>
                    <h2>@deletedCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow text-center dashboard-card bg-info text-white">
                <div class="card-body">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h6>المستخدمين</h6>
                    <h2>@uniqueUsers</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Card -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-filter"></i> فلترة السجل
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">نوع الكيان</label>
                    <select name="entityName" class="form-select">
                        <option value="">-- جميع الكيانات --</option>
                        @foreach (var entity in Model.Select(l => l.EntityName).Distinct().OrderBy(e => e))
                        {
                            <option value="@entity" selected="@(ViewBag.EntityName == entity)">@entity</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">رقم الكيان</label>
                    <input type="number" name="entityId" class="form-control" value="@ViewBag.EntityId" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">المستخدم</label>
                    <select name="username" class="form-select">
                        <option value="">-- الكل --</option>
                        @foreach (var user in Model.Select(l => l.PerformedBy).Distinct().OrderBy(u => u))
                        {
                            <option value="@user" selected="@(ViewBag.Username == user)">@user</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">الإجراء</label>
                    <select name="action" class="form-select">
                        <option value="">-- الكل --</option>
                        <option value="Added" selected="@(ViewBag.Action == "Added")">إضافة</option>
                        <option value="Modified" selected="@(ViewBag.Action == "Modified")">تعديل</option>
                        <option value="Deleted" selected="@(ViewBag.Action == "Deleted")">حذف</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> بحث
                    </button>
                </div>

                <div class="col-md-3">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <a href="/AuditLogs" class="btn btn-secondary w-100">
                        <i class="fas fa-redo"></i> إعادة تعيين
                    </a>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="button" class="btn btn-success w-100" onclick="exportLogs()">
                        <i class="fas fa-file-excel"></i> تصدير CSV
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> سجل التغييرات التفصيلي
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table id="auditTable" class="table table-sm table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>التاريخ والوقت</th>
                                <th>المستخدم</th>
                                <th>الكيان</th>
                                <th>رقم الكيان</th>
                                <th>الإجراء</th>
                                <th>التفاصيل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                var actionBadge = log.Action switch {
                                    "Added" => "bg-success",
                                    "Modified" => "bg-warning text-dark",
                                    "Deleted" => "bg-danger",
                                    _ => "bg-secondary"
                                };

                                var actionIcon = log.Action switch {
                                    "Added" => "fa-plus-circle",
                                    "Modified" => "fa-edit",
                                    "Deleted" => "fa-trash-alt",
                                    _ => "fa-question-circle"
                                };

                                <tr>
                                    <td>
                                        <small>
                                            <i class="fas fa-calendar text-primary"></i>
                                            @log.PerformedAt.ToString("dd/MM/yyyy")
                                            <br/>
                                            <i class="fas fa-clock text-muted"></i>
                                            @log.PerformedAt.ToString("HH:mm:ss")
                                        </small>
                                    </td>
                                    <td>
                                        <a href="/AuditLogs/ByUser?username=@log.PerformedBy" class="text-decoration-none">
                                            <span class="badge bg-primary">
                                                <i class="fas fa-user"></i>
                                                @log.PerformedBy
                                            </span>
                                        </a>
                                    </td>
                                    <td>
                                        <strong>@log.EntityName</strong>
                                    </td>
                                    <td>
                                        <a href="/AuditLogs/ByEntity?entityName=@log.EntityName&entityId=@log.EntityId" class="text-decoration-none">
                                            <code>#@log.EntityId</code>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge @actionBadge">
                                            <i class="fas @actionIcon"></i>
                                            @log.Action
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.OldValues) || !string.IsNullOrEmpty(log.NewValues))
                                        {
                                            <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal-@log.AuditLogId">
                                                <i class="fas fa-eye"></i> عرض
                                            </button>

                                            <!-- Details Modal -->
                                            <div class="modal fade" id="detailsModal-@log.AuditLogId" tabindex="-1">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-info text-white">
                                                            <h5 class="modal-title">
                                                                <i class="fas fa-info-circle"></i> تفاصيل التغيير
                                                            </h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <strong><i class="fas fa-database"></i> الكيان:</strong> @log.EntityName
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <strong><i class="fas fa-hashtag"></i> الرقم:</strong> @log.EntityId
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <strong><i class="fas fa-user"></i> المستخدم:</strong> @log.PerformedBy
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <strong><i class="fas fa-calendar"></i> التاريخ:</strong> @log.PerformedAt.ToString("dd/MM/yyyy HH:mm:ss")
                                                                </div>
                                                            </div>

                                                            @if (!string.IsNullOrEmpty(log.OldValues))
                                                            {
                                                                <div class="mb-3">
                                                                    <h6 class="text-danger">
                                                                        <i class="fas fa-arrow-circle-left"></i> القيم القديمة:
                                                                    </h6>
                                                                    <pre class="bg-light p-3 rounded"><code>@log.OldValues</code></pre>
                                                                </div>
                                                            }

                                                            @if (!string.IsNullOrEmpty(log.NewValues))
                                                            {
                                                                <div>
                                                                    <h6 class="text-success">
                                                                        <i class="fas fa-arrow-circle-right"></i> القيم الجديدة:
                                                                    </h6>
                                                                    <pre class="bg-light p-3 rounded"><code>@log.NewValues</code></pre>
                                                                </div>
                                                            }
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                <i class="fas fa-times"></i> إغلاق
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h5>لا توجد سجلات للعرض</h5>
                    <p class="text-muted">جرب تغيير معايير البحث</p>
                </div>
            }
        </div>
    </div>

    <!-- Legend -->
    <div class="card shadow mt-3">
        <div class="card-body">
            <h6 class="card-title">
                <i class="fas fa-info-circle"></i> دليل الألوان:
            </h6>
            <div class="row">
                <div class="col-md-4">
                    <span class="badge bg-success"><i class="fas fa-plus-circle"></i> Added</span> = إضافة جديدة
                </div>
                <div class="col-md-4">
                    <span class="badge bg-warning text-dark"><i class="fas fa-edit"></i> Modified</span> = تعديل
                </div>
                <div class="col-md-4">
                    <span class="badge bg-danger"><i class="fas fa-trash-alt"></i> Deleted</span> = حذف
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#auditTable').DataTable({
                "language": {"url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"},
                "order": [[0, "desc"]],
                "pageLength": 50,
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });
        });

        function exportLogs() {
            const startDate = $('input[name="startDate"]').val() || '@DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd")';
            const endDate = $('input[name="endDate"]').val() || '@DateTime.Today.ToString("yyyy-MM-dd")';
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/AuditLogs/Export';
            
            const startInput = document.createElement('input');
            startInput.type = 'hidden';
            startInput.name = 'startDate';
            startInput.value = startDate;
            form.appendChild(startInput);
            
            const endInput = document.createElement('input');
            endInput.type = 'hidden';
            endInput.name = 'endDate';
            endInput.value = endDate;
            form.appendChild(endInput);
            
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = $('input[name="__RequestVerificationToken"]').val();
            form.appendChild(tokenInput);
            
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }
    </script>
}