@model Khutootcompany.Application.DTOs.WakalaDto

@{
    ViewData["Title"] = "إضافة وكالة جديدة";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-plus-circle"></i> إضافة وكالة جديدة
        </h1>
        <a href="/Wakalat" class="btn btn-secondary">
            <i class="fas fa-arrow-right"></i> رجوع للقائمة
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-contract"></i> بيانات الوكالة
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" id="wakalaForm">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Employee Selection -->
                        <div class="mb-4">
                            <label asp-for="EmployeeId" class="form-label">
                                <i class="fas fa-user"></i> الموظف <span class="text-danger">*</span>
                            </label>
                            <select asp-for="EmployeeId" class="form-select form-select-lg" id="employeeSelect" required>
                                <option value="">-- اختر الموظف --</option>
                                @if (ViewBag.Employees != null)
                                {
                                    @foreach (var emp in ViewBag.Employees)
                                    {
                                        <option value="@emp.Value">@emp.Text</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            <small class="text-muted d-block mt-1">
                                <i class="fas fa-info-circle"></i> اختر الموظف الذي ستُصدر له الوكالة
                            </small>
                        </div>

                        <!-- Wakala Type Selection -->
                        <div class="card mb-4 bg-light">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="fas fa-list-alt"></i> نوع الوكالة <span class="text-danger">*</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-check form-switch mb-3" style="padding-top: 10px;">
                                    <input asp-for="IsGeneral" class="form-check-input" type="checkbox" id="isGeneralSwitch" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label" for="isGeneralSwitch" style="padding-top: 5px; margin-right: 10px;">
                                        <strong id="typeLabel">وكالة على شاحنة محددة</strong>
                                    </label>
                                </div>

                                <div class="alert alert-info mb-0" id="typeDescription">
                                    <i class="fas fa-truck"></i> 
                                    <strong>وكالة على شاحنة:</strong> خاصة بشاحنة واحدة فقط
                                </div>
                            </div>
                        </div>

                        <!-- Truck Selection (Hidden if General) -->
                        <div class="mb-4" id="truckSelectDiv">
                            <label asp-for="TruckId" class="form-label">
                                <i class="fas fa-truck"></i> الشاحنة
                            </label>
                            <select asp-for="TruckId" class="form-select" id="truckSelect">
                                <option value="">-- اختر الشاحنة --</option>
                                @if (ViewBag.Trucks != null)
                                {
                                    @foreach (var truck in ViewBag.Trucks)
                                    {
                                        <option value="@truck.Value">@truck.Text</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="TruckId" class="text-danger small"></span>
                            <small class="text-muted d-block mt-1">
                                <i class="fas fa-info-circle"></i> حدد الشاحنة التي ستكون عليها الوكالة
                            </small>
                        </div>

                        <!-- Dates Row -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="IssueDate" class="form-label">
                                    <i class="fas fa-calendar-plus"></i> تاريخ الإصدار <span class="text-danger">*</span>
                                </label>
                                <input asp-for="IssueDate" type="date" class="form-control" id="issueDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="IssueDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ExpiryDate" class="form-label">
                                    <i class="fas fa-calendar-times"></i> تاريخ الانتهاء <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ExpiryDate" type="date" class="form-control" id="expiryDate" required />
                                <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                                <small class="text-muted d-block mt-1" id="durationText"></small>
                            </div>
                        </div>

                        <!-- Price and Payment -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">
                                    <i class="fas fa-money-bill-wave"></i> السعر (د.ك) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Price" type="number" step="0.001" class="form-control form-control-lg" id="priceInput" placeholder="0.000" required />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                                <small class="text-muted d-block mt-1" id="priceHint">
                                    <i class="fas fa-info-circle"></i> السعر يختلف حسب النوع
                                </small>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="fas fa-credit-card"></i> حالة الدفع
                                </label>
                                <div class="form-check form-switch" style="padding-top: 10px;">
                                    <input asp-for="IsPaid" class="form-check-input" type="checkbox" id="isPaidSwitch" style="width: 3rem; height: 1.5rem;">
                                    <label class="form-check-label" for="isPaidSwitch" style="padding-top: 5px; margin-right: 10px;">
                                        <strong id="paidLabel">غير مدفوع</strong>
                                    </label>
                                </div>
                                <small class="text-muted d-block mt-1">
                                    <i class="fas fa-hand-holding-usd"></i> حدد إذا تم الدفع أم لا
                                </small>
                            </div>
                        </div>

                        <!-- Sond Number and Notes -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="SondNumber" class="form-label">
                                    <i class="fas fa-receipt"></i> رقم السند
                                </label>
                                <input asp-for="SondNumber" type="text" class="form-control" placeholder="رقم السند (اختياري)" maxlength="50" />
                                <span asp-validation-for="SondNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Notes" class="form-label">
                                    <i class="fas fa-sticky-note"></i> ملاحظات
                                </label>
                                <input asp-for="Notes" type="text" class="form-control" placeholder="ملاحظات إضافية" maxlength="500" />
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Summary Card -->
                        <div class="alert alert-info" id="summaryCard">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle"></i> ملخص الوكالة
                            </h6>
                            <div id="summaryContent">
                                <p class="mb-1"><strong>الموظف:</strong> <span id="summaryEmployee">غير محدد</span></p>
                                <p class="mb-1"><strong>النوع:</strong> <span id="summaryType" class="badge bg-secondary">على شاحنة</span></p>
                                <p class="mb-1"><strong>الشاحنة:</strong> <span id="summaryTruck">غير محددة</span></p>
                                <p class="mb-1"><strong>المدة:</strong> <span id="summaryDuration">12 شهر (افتراضي)</span></p>
                                <p class="mb-1"><strong>السعر:</strong> <span id="summaryPrice" class="text-success fw-bold">0.000 د.ك</span></p>
                                <p class="mb-0"><strong>حالة الدفع:</strong> <span id="summaryPayment" class="badge bg-danger">غير مدفوع</span></p>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <hr>
                        <div class="d-flex justify-content-between gap-2">
                            <a href="/Wakalat" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                            <button type="reset" class="btn btn-warning btn-lg">
                                <i class="fas fa-redo"></i> إعادة تعيين
                            </button>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> حفظ الوكالة
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Tips -->
            <div class="card mt-3 shadow border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="fas fa-lightbulb"></i> نصائح سريعة:
                    </h6>
                    <ul class="mb-0">
                        <li><strong>الوكالة العامة:</strong> تشمل جميع الشاحنات والمعاملات (أغلى سعراً)</li>
                        <li><strong>الوكالة على شاحنة:</strong> خاصة بشاحنة واحدة فقط (أرخص)</li>
                        <li>المدة الافتراضية: <strong>12 شهر</strong> (سنة)</li>
                        <li>سيتم تسجيل حركة مالية تلقائياً إذا تم تحديد "مدفوع"</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Toggle between general and truck-specific
            $('#isGeneralSwitch').on('change', function() {
                if ($(this).is(':checked')) {
                    // General Wakala
                    $('#typeLabel').text('وكالة عامة (جميع الشاحنات)');
                    $('#typeDescription').html('<i class="fas fa-globe"></i> <strong>وكالة عامة:</strong> تشمل جميع الشاحنات والمعاملات');
                    $('#truckSelectDiv').slideUp();
                    $('#truckSelect').prop('required', false).val('');
                    $('#summaryType').removeClass('bg-secondary').addClass('bg-info').text('وكالة عامة');
                    $('#summaryTruck').text('جميع الشاحنات');
                    $('#priceHint').html('<i class="fas fa-coins"></i> الوكالة العامة عادةً أغلى سعراً');
                } else {
                    // Truck-specific Wakala
                    $('#typeLabel').text('وكالة على شاحنة محددة');
                    $('#typeDescription').html('<i class="fas fa-truck"></i> <strong>وكالة على شاحنة:</strong> خاصة بشاحنة واحدة فقط');
                    $('#truckSelectDiv').slideDown();
                    $('#truckSelect').prop('required', true);
                    $('#summaryType').removeClass('bg-info').addClass('bg-secondary').text('على شاحنة');
                    updateSummary();
                    $('#priceHint').html('<i class="fas fa-info-circle"></i> السعر يختلف حسب النوع');
                }
            });

            // Auto-calculate expiry date (12 months from issue)
            $('#issueDate').on('change', function() {
                const issueDate = new Date($(this).val());
                if (issueDate) {
                    const expiryDate = new Date(issueDate);
                    expiryDate.setFullYear(expiryDate.getFullYear() + 1);
                    $('#expiryDate').val(expiryDate.toISOString().split('T')[0]);
                    updateDuration();
                }
            });

            // Calculate duration
            function updateDuration() {
                const issueDate = new Date($('#issueDate').val());
                const expiryDate = new Date($('#expiryDate').val());
                
                if (issueDate && expiryDate) {
                    const diffTime = Math.abs(expiryDate - issueDate);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    const diffMonths = Math.round(diffDays / 30);
                    
                    $('#durationText').html(`<i class="fas fa-clock"></i> المدة: ${diffMonths} شهر (${diffDays} يوم)`);
                    $('#summaryDuration').text(`${diffMonths} شهر (${diffDays} يوم)`);
                }
            }

            $('#expiryDate').on('change', updateDuration);

            // Update payment label
            $('#isPaidSwitch').on('change', function() {
                if ($(this).is(':checked')) {
                    $('#paidLabel').text('مدفوع').removeClass('text-danger').addClass('text-success');
                    $('#summaryPayment').removeClass('bg-danger').addClass('bg-success').text('مدفوع');
                } else {
                    $('#paidLabel').text('غير مدفوع').removeClass('text-success').addClass('text-danger');
                    $('#summaryPayment').removeClass('bg-success').addClass('bg-danger').text('غير مدفوع');
                }
            });

            // Update price in summary
            $('#priceInput').on('input', function() {
                const price = parseFloat($(this).val()) || 0;
                $('#summaryPrice').text(price.toFixed(3) + ' د.ك');
            });

            // Update summary
            function updateSummary() {
                const employeeName = $('#employeeSelect option:selected').text();
                const truckName = $('#truckSelect option:selected').text();
                
                $('#summaryEmployee').text(employeeName !== '-- اختر الموظف --' ? employeeName : 'غير محدد');
                
                if (!$('#isGeneralSwitch').is(':checked')) {
                    $('#summaryTruck').text(truckName !== '-- اختر الشاحنة --' ? truckName : 'غير محددة');
                }
            }

            $('#employeeSelect, #truckSelect').on('change', updateSummary);

            // Initialize - set expiry to 12 months from now
            const today = new Date();
            const oneYearLater = new Date(today);
            oneYearLater.setFullYear(oneYearLater.getFullYear() + 1);
            $('#expiryDate').val(oneYearLater.toISOString().split('T')[0]);
            updateDuration();

            // Form validation
            $('#wakalaForm').on('submit', function(e) {
                const employeeId = $('#employeeSelect').val();
                if (!employeeId) {
                    e.preventDefault();
                    alert('يجب اختيار الموظف');
                    $('#employeeSelect').focus();
                    return false;
                }

                if (!$('#isGeneralSwitch').is(':checked')) {
                    const truckId = $('#truckSelect').val();
                    if (!truckId) {
                        e.preventDefault();
                        alert('يجب اختيار الشاحنة للوكالة الخاصة');
                        $('#truckSelect').focus();
                        return false;
                    }
                }

                const price = parseFloat($('#priceInput').val());
                if (!price || price <= 0) {
                    e.preventDefault();
                    alert('يجب إدخال السعر');
                    $('#priceInput').focus();
                    return false;
                }

                if (!confirm('هل أنت متأكد من حفظ الوكالة؟')) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}

<style>
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
    
    .form-check-input:checked {
        background-color: #198754;
        border-color: #198754;
    }
</style>