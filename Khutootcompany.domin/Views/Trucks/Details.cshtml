@model Khutootcompany.Application.DTOs.TruckDto

@{
    ViewData["Title"] = $"تفاصيل الشاحنة: {Model.PlateNumber}";
}

<div class="container-fluid">
    <!-- Header with Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-truck"></i> تفاصيل الشاحنة: 
            <span class="badge bg-primary">@Model.PlateNumber</span>
        </h1>
        <div class="btn-group" role="group">
            <a href="/Trucks" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> رجوع للقائمة
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a href="/Trucks/Edit/@Model.TruckId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                <button onclick="confirmDelete()" class="btn btn-danger">
                    <i class="fas fa-trash"></i> حذف
                </button>
            }
            <a href="/Reports/GeneratePAMReport" class="btn btn-info" target="_blank">
                <i class="fas fa-file-pdf"></i> تصدير PDF
            </a>
        </div>
    </div>

    <!-- Status Alerts -->
    <div class="row mb-4">
        @if (Model.IsInsuranceExpired)
        {
            <div class="col-md-6">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle fa-2x float-start me-3"></i>
                    <h5 class="alert-heading">تأمين منتهي!</h5>
                    <p class="mb-0">تأمين هذه الشاحنة منتهي الصلاحية. يرجى التجديد فوراً.</p>
                    <hr>
                    <a href="/InsuranceRenewals" class="btn btn-sm btn-danger">
                        <i class="fas fa-shield-alt"></i> تجديد التأمين الآن
                    </a>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
        else if (Model.IsInsuranceExpiringSoon)
        {
            <div class="col-md-6">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-clock fa-2x float-start me-3"></i>
                    <h5 class="alert-heading">تأمين ينتهي قريباً</h5>
                    <p class="mb-0">تأمين هذه الشاحنة سينتهي خلال 30 يوماً.</p>
                    <hr>
                    <a href="/InsuranceRenewals" class="btn btn-sm btn-warning">
                        <i class="fas fa-shield-alt"></i> جدول التأمين
                    </a>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (Model.PAMStatus == Khutootcompany.Domain.Enums.PAMStatus.غير_مقبول)
        {
            <div class="col-md-6">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-times-circle fa-2x float-start me-3"></i>
                    <h5 class="alert-heading">غير مقبول في PAM</h5>
                    <p class="mb-0">هذه الشاحنة غير مقبولة في نظام PAM.</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs nav-fill mb-3" id="truckTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">
                <i class="fas fa-info-circle"></i> البيانات الأساسية
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="driver-tab" data-bs-toggle="tab" data-bs-target="#driver" type="button">
                <i class="fas fa-user"></i> السائق الحالي
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="insurance-tab" data-bs-toggle="tab" data-bs-target="#insurance" type="button">
                <i class="fas fa-shield-alt"></i> التأمين
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pam-tab" data-bs-toggle="tab" data-bs-target="#pam" type="button">
                <i class="fas fa-check-circle"></i> معلومات PAM
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="audit-tab" data-bs-toggle="tab" data-bs-target="#audit" type="button">
                <i class="fas fa-history"></i> السجل
            </button>
        </li>
    </ul>

    <div class="tab-content" id="truckTabContent">
        <!-- Basic Info Tab -->
        <div class="tab-pane fade show active" id="info" role="tabpanel">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-truck"></i> البيانات الأساسية</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="200"><strong><i class="fas fa-hashtag text-primary"></i> رقم اللوحة:</strong></td>
                                    <td><span class="fs-5 fw-bold text-primary">@Model.PlateNumber</span></td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-id-badge text-info"></i> رقم الإداري:</strong></td>
                                    <td>@(Model.AdminNumber ?? "غير محدد")</td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-car text-success"></i> الموديل:</strong></td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-calendar text-warning"></i> السنة:</strong></td>
                                    <td>@(Model.Year?.ToString() ?? "غير محدد")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="200"><strong><i class="fas fa-palette text-secondary"></i> اللون:</strong></td>
                                    <td>@(Model.Color ?? "غير محدد")</td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-certificate text-info"></i> نوع الترخيص:</strong></td>
                                    <td><span class="badge bg-info">@Model.LicenseTypeDisplay</span></td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-history text-muted"></i> اللوحة السابقة:</strong></td>
                                    <td>@(Model.PreviousPlateNumber ?? "لا توجد")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr>
                        <div class="alert alert-light">
                            <h6 class="alert-heading"><i class="fas fa-sticky-note"></i> ملاحظات:</h6>
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Driver Tab -->
        <div class="tab-pane fade" id="driver" role="tabpanel">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> السائق الحالي</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.CurrentDriverName))
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <h4 class="text-info"><i class="fas fa-id-card"></i> @Model.CurrentDriverName</h4>
                                <table class="table table-borderless mt-3">
                                    <tr>
                                        <td width="200"><strong>الرقم المدني:</strong></td>
                                        <td>@Model.CurrentDriverCivilId</td>
                                    </tr>
                                    <tr>
                                        <td><strong>الجنسية:</strong></td>
                                        <td>@Model.CurrentDriverNationality</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="/Employees/Details/@Model.CurrentDriverCivilId" class="btn btn-primary">
                                    <i class="fas fa-user-circle"></i> عرض ملف السائق
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> 
                            <strong>لا يوجد سائق مُعيّن لهذه الشاحنة حالياً</strong>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mt-3">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#assignDriverModal">
                                    <i class="fas fa-user-plus"></i> تعيين سائق
                                </button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Insurance Tab -->
        <div class="tab-pane fade" id="insurance" role="tabpanel">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-shield-alt"></i> معلومات التأمين</h5>
                </div>
                <div class="card-body">
                    @if (Model.InsuranceExpiryDate.HasValue)
                    {
                        var statusBadge = Model.IsInsuranceExpired ? "bg-danger" : 
                                         Model.IsInsuranceExpiringSoon ? "bg-warning text-dark" : 
                                         "bg-success";
                        var statusText = Model.IsInsuranceExpired ? "منتهي" : 
                                        Model.IsInsuranceExpiringSoon ? "ينتهي قريباً" : 
                                        "صالح";

                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">حالة التأمين</h6>
                                        <h2><span class="badge @statusBadge">@statusText</span></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">تاريخ الانتهاء</h6>
                                        <h2 class="text-primary">@Model.InsuranceExpiryDate.Value.ToString("dd/MM/yyyy")</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="table table-striped">
                            <tr>
                                <td width="200"><strong>اليوم:</strong></td>
                                <td>@Model.InsuranceDay</td>
                            </tr>
                            <tr>
                                <td><strong>الشهر:</strong></td>
                                <td>@Model.InsuranceMonth</td>
                            </tr>
                            <tr>
                                <td><strong>السنة:</strong></td>
                                <td>@Model.InsuranceYear</td>
                            </tr>
                        </table>

                        @if (Model.IsInsuranceExpired || Model.IsInsuranceExpiringSoon)
                        {
                            <div class="mt-3">
                                <a href="/InsuranceRenewals" class="btn btn-success btn-lg">
                                    <i class="fas fa-sync-alt"></i> تجديد التأمين الآن
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> لا توجد بيانات تأمين مسجلة
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- PAM Tab -->
        <div class="tab-pane fade" id="pam" role="tabpanel">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-check-circle"></i> معلومات نظام PAM</h5>
                </div>
                <div class="card-body">
                    @if (Model.IsRegisteredInPAM)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">حالة التسجيل</h6>
                                        <h3><i class="fas fa-check-circle text-success"></i> مسجلة</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted">الحالة في PAM</h6>
                                        @if (Model.PAMStatus.HasValue)
                                        {
                                            var pamBadge = Model.PAMStatus.Value.ToString() == "تم_القبول" ? "bg-success" : "bg-danger";
                                            <h3><span class="badge @pamBadge">@Model.PAMStatusDisplay</span></h3>
                                        }
                                        else
                                        {
                                            <p class="text-muted">غير محدد</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.PAMRegistrationDate.HasValue)
                        {
                            <table class="table table-bordered">
                                <tr>
                                    <td width="200"><strong><i class="fas fa-calendar-check"></i> تاريخ التسجيل:</strong></td>
                                    <td>@Model.PAMRegistrationDate.Value.ToString("dd/MM/yyyy")</td>
                                </tr>
                            </table>
                        }
                    }
                    else
                    {
                        <div class="alert alert-secondary">
                            <i class="fas fa-times-circle"></i> 
                            <strong>هذه الشاحنة غير مسجلة في نظام PAM</strong>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Audit Tab -->
        <div class="tab-pane fade" id="audit" role="tabpanel">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> سجل التغييرات</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light mb-3">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-plus-circle text-success"></i> الإضافة</h6>
                                    <p class="mb-1"><strong>بواسطة:</strong> @Model.CreatedBy</p>
                                    <p class="mb-0"><strong>التاريخ:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                        {
                            <div class="col-md-6">
                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="fas fa-edit text-warning"></i> آخر تعديل</h6>
                                        <p class="mb-1"><strong>بواسطة:</strong> @Model.UpdatedBy</p>
                                        <p class="mb-0"><strong>التاريخ:</strong> @Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-3">
                            <a href="/AuditLogs?entityName=Truck" class="btn btn-secondary">
                                <i class="fas fa-list"></i> عرض جميع السجلات
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> تأكيد الحذف</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف الشاحنة <strong>@Model.PlateNumber</strong>؟</p>
                <p class="text-danger"><i class="fas fa-exclamation-circle"></i> لا يمكن التراجع عن هذا الإجراء!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <form method="post" action="/Trucks/Delete/@Model.TruckId">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> تأكيد الحذف
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            $('#deleteModal').modal('show');
        }
    </script>
}