@model Khutootcompany.Application.DTOs.TruckDto

@{
    ViewData["Title"] = "حذف الشاحنة";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> تأكيد حذف الشاحنة
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-skull-crossbones"></i> تحذير هام!
                        </h5>
                        <p>أنت على وشك حذف الشاحنة التالية من النظام بشكل نهائي:</p>
                        <hr>
                        <p class="mb-0">
                            <strong>هذا الإجراء لا يمكن التراجع عنه!</strong>
                        </p>
                    </div>

                    <!-- Truck Details -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-truck"></i> بيانات الشاحنة المراد حذفها</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="200"><strong>رقم اللوحة:</strong></td>
                                    <td><span class="fs-4 fw-bold text-danger">@Model.PlateNumber</span></td>
                                </tr>
                                <tr>
                                    <td><strong>الموديل:</strong></td>
                                    <td>@Model.Model</td>
                                </tr>
                                <tr>
                                    <td><strong>السنة:</strong></td>
                                    <td>@Model.Year</td>
                                </tr>
                                <tr>
                                    <td><strong>نوع الترخيص:</strong></td>
                                    <td><span class="badge bg-info">@Model.LicenseTypeDisplay</span></td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.CurrentDriverName))
                                {
                                    <tr>
                                        <td><strong>السائق الحالي:</strong></td>
                                        <td>@Model.CurrentDriverName (@Model.CurrentDriverCivilId)</td>
                                    </tr>
                                }
                                @if (Model.PAMStatus.HasValue)
                                {
                                    <tr>
                                        <td><strong>حالة PAM:</strong></td>
                                        <td><span class="badge bg-warning text-dark">@Model.PAMStatusDisplay</span></td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                    <!-- Warning Messages -->
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle"></i> ما سيحدث عند الحذف:
                        </h6>
                        <ul class="mb-0">
                            <li>سيتم حذف جميع بيانات الشاحنة من النظام</li>
                            <li>سيتم حذف سجلات التأمين المرتبطة بها</li>
                            <li>سيتم حذف الوكالات وكروت الزيارة المرتبطة</li>
                            <li>قد تتأثر سجلات الأقساط والحركات المالية</li>
                            <li>سيبقى السجل في قاعدة البيانات كـ "محذوف" للأرشفة</li>
                        </ul>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CurrentDriverName))
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-user-shield"></i> 
                            <strong>ملاحظة:</strong> هذه الشاحنة مُعيّن عليها سائق حالياً. سيتم إلغاء التعيين تلقائياً.
                        </div>
                    }

                    <!-- Confirmation Form -->
                    <hr>
                    <form method="post" asp-action="Delete" asp-route-id="@Model.TruckId">
                        @Html.AntiForgeryToken()
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/Trucks" class="btn btn-lg btn-secondary">
                                <i class="fas fa-arrow-right"></i> إلغاء والعودة
                            </a>
                            
                            <div>
                                <a href="/Trucks/Details/@Model.TruckId" class="btn btn-lg btn-info me-2">
                                    <i class="fas fa-eye"></i> مراجعة التفاصيل
                                </a>
                                <button type="submit" class="btn btn-lg btn-danger" onclick="return confirmDelete();">
                                    <i class="fas fa-trash-alt"></i> تأكيد الحذف النهائي
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                
                <div class="card-footer bg-light text-muted">
                    <small>
                        <i class="fas fa-clock"></i> 
                        آخر تحديث: @(Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm") ?? Model.CreatedDate.ToString("dd/MM/yyyy HH:mm"))
                        بواسطة: @(Model.UpdatedBy ?? Model.CreatedBy)
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('⚠️ هل أنت متأكد تماماً من حذف الشاحنة "' + '@Model.PlateNumber' + '"؟\n\nهذا الإجراء لا يمكن التراجع عنه!');
        }
    </script>
}