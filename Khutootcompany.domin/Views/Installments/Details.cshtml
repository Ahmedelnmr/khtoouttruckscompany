@model Khutootcompany.Application.DTOs.InstallmentDto

@{
    ViewData["Title"] = "تفاصيل القسط";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-credit-card"></i> تفاصيل القسط
            @if (Model.IsCompleted)
            {
                <span class="badge bg-success">مكتمل</span>
            }
            else if (Model.IsOverdue)
            {
                <span class="badge bg-danger">متأخر</span>
            }
            else
            {
                <span class="badge bg-primary">نشط</span>
            }
        </h1>
        <div>
            <a href="/Installments" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> رجوع للقائمة
            </a>
            @if (User.IsInRole("Admin") && !Model.IsCompleted)
            {
                <a href="/Installments/Edit/@Model.InstallmentId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> تعديل
                </a>
                <a href="/Installments/Delete/@Model.InstallmentId" class="btn btn-danger">
                    <i class="fas fa-trash"></i> حذف
                </a>
            }
        </div>
    </div>

    <div class="row">
        <!-- Right Column -->
        <div class="col-md-8">
            <!-- Basic Info Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> المعلومات الأساسية
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%"><i class="fas fa-truck text-primary"></i> الشاحنة:</th>
                                    <td>
                                        <a href="/Trucks/Details/@Model.TruckId" class="fw-bold">
                                            @Model.TruckPlate
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-user text-primary"></i> السائق:</th>
                                    <td>
                                        <a href="/Employees/Details/@Model.EmployeeId">
                                            @Model.EmployeeName
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-calendar-alt text-primary"></i> تاريخ البداية:</th>
                                    <td>@Model.StartDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-clock text-primary"></i> المدة:</th>
                                    <td>@Model.TotalMonths شهر</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%"><i class="fas fa-university text-success"></i> مصدر التمويل:</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.FinanceSource))
                                        {
                                            <span class="badge bg-info">@Model.FinanceSource</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">غير محدد</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-receipt text-success"></i> رقم المعاملة:</th>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.SayerTransactionNumber))
                                        {
                                            <code>@Model.SayerTransactionNumber</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">غير محدد</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-user-tie text-info"></i> أنشئ بواسطة:</th>
                                    <td>@Model.CreatedBy</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-calendar text-info"></i> تاريخ الإنشاء:</th>
                                    <td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="alert alert-light mt-3">
                            <h6 class="alert-heading">
                                <i class="fas fa-sticky-note"></i> ملاحظات:
                            </h6>
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Financial Summary Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-money-bill-wave"></i> الملخص المالي
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-light">
                                <h6 class="text-muted small">سعر المكتب</h6>
                                <h4 class="text-primary mb-0">@Model.TotalPriceOffice.ToString("N3")</h4>
                                <small class="text-muted">د.ك</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-light">
                                <h6 class="text-muted small">سعر الساير</h6>
                                <h4 class="text-warning mb-0">@Model.TotalPriceSayer.ToString("N3")</h4>
                                <small class="text-muted">د.ك</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-success-subtle">
                                <h6 class="text-muted small">الربح</h6>
                                <h4 class="text-success mb-0">@Model.ProfitMargin.ToString("N3")</h4>
                                <small class="text-muted">د.ك</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-info-subtle">
                                <h6 class="text-muted small">القسط الشهري</h6>
                                <h4 class="text-info mb-0">@Model.MonthlyQest.ToString("N3")</h4>
                                <small class="text-muted">د.ك</small>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="border rounded p-3 bg-success-subtle">
                                <h6 class="text-muted small">المدفوع</h6>
                                <h3 class="text-success mb-0">@Model.PaidAmount.ToString("N3")</h3>
                                <small class="text-muted">د.ك</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3 bg-danger-subtle">
                                <h6 class="text-muted small">المتبقي</h6>
                                <h3 class="text-danger mb-0">@Model.RemainingAmount.ToString("N3")</h3>
                                <small class="text-muted">د.ك</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3 bg-primary-subtle">
                                <h6 class="text-muted small">نسبة الإنجاز</h6>
                                <h3 class="text-primary mb-0">@Model.ProgressPercentage.ToString("N0")%</h3>
                                <div class="progress mt-2" style="height: 10px;">
                                    <div class="progress-bar @(Model.IsCompleted ? "bg-success" : Model.IsOverdue ? "bg-danger" : "bg-primary")" 
                                         style="width: @Model.ProgressPercentage%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payments History Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-history"></i> سجل الدفعات
                        <span class="badge bg-light text-dark">@Model.Payments.Count دفعة</span>
                    </h5>
                    @if (!Model.IsCompleted)
                    {
                        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#paymentModal">
                            <i class="fas fa-plus"></i> تسجيل دفعة جديدة
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Payments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>التاريخ</th>
                                        <th>المبلغ</th>
                                        <th>النوع</th>
                                        <th>رقم السند</th>
                                        <th>ملاحظات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments.OrderByDescending(p => p.PaymentDate))
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-calendar-day text-primary"></i>
                                                @payment.PaymentDate.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                <strong class="text-success">
                                                    @payment.Amount.ToString("N3") د.ك
                                                </strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@payment.PaymentType</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(payment.SondNumber))
                                                {
                                                    <code>@payment.SondNumber</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(payment.Notes))
                                                {
                                                    <small class="text-muted">@payment.Notes</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th>الإجمالي:</th>
                                        <th colspan="4">
                                            <strong class="text-success">
                                                @Model.Payments.Sum(p => p.Amount).ToString("N3") د.ك
                                            </strong>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            لا توجد دفعات مسجلة حتى الآن
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Left Column - Statistics -->
        <div class="col-md-4">
            <!-- Progress Card -->
            <div class="card shadow mb-4 border-primary">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie"></i> حالة القسط
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <canvas id="progressChart" width="200" height="200"></canvas>
                    </div>
                    
                    <h3 class="mb-3">
                        @if (Model.IsCompleted)
                        {
                            <span class="text-success">
                                <i class="fas fa-check-circle"></i> مكتمل
                            </span>
                        }
                        else if (Model.IsOverdue)
                        {
                            <span class="text-danger">
                                <i class="fas fa-exclamation-triangle"></i> متأخر
                            </span>
                        }
                        else
                        {
                            <span class="text-primary">
                                <i class="fas fa-sync-alt"></i> نشط
                            </span>
                        }
                    </h3>

                    <hr>

                    <div class="d-flex justify-content-between mb-2">
                        <span>تم الدفع:</span>
                        <strong class="text-success">@Model.ProgressPercentage.ToString("N0")%</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>المتبقي:</span>
                        <strong class="text-danger">@((100 - Model.ProgressPercentage).ToString("N0"))%</strong>
                    </div>
                </div>
            </div>

            <!-- Quick Stats Card -->
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-calculator"></i> إحصائيات سريعة
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>عدد الدفعات:</span>
                            <strong>@Model.Payments.Count</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>متوسط الدفعة:</span>
                            <strong>
                                @if (Model.Payments.Any())
                                {
                                    @Model.Payments.Average(p => p.Amount).ToString("N3")
                                }
                                else
                                {
                                    @:0.000
                                }
                                د.ك
                            </strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>أشهر متبقية:</span>
                            <strong>
                                @{
                                    var monthsPassed = (int)((DateTime.Now - Model.StartDate).Days / 30.0);
                                    var monthsRemaining = Math.Max(0, Model.TotalMonths - monthsPassed);
                                }
                                @monthsRemaining شهر
                            </strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>نسبة الربح:</span>
                            <strong class="text-success">
                                @((Model.ProfitMargin / Model.TotalPriceOffice * 100).ToString("N1"))%
                            </strong>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Actions Card -->
            @if (!Model.IsCompleted)
            {
                <div class="card shadow border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">
                            <i class="fas fa-tools"></i> إجراءات سريعة
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#paymentModal">
                                <i class="fas fa-dollar-sign"></i> تسجيل دفعة
                            </button>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="/Installments/Edit/@Model.InstallmentId" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> تعديل القسط
                                </a>
                            }
                            <a href="/Trucks/Details/@Model.TruckId" class="btn btn-info">
                                <i class="fas fa-truck"></i> تفاصيل الشاحنة
                            </a>
                            <a href="/Employees/Details/@Model.EmployeeId" class="btn btn-secondary">
                                <i class="fas fa-user"></i> تفاصيل السائق
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-action="RecordPayment">
                @Html.AntiForgeryToken()
                <input type="hidden" name="InstallmentId" value="@Model.InstallmentId" />
                
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-money-bill-wave"></i> تسجيل دفعة جديدة
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                
                <div class="modal-body">
                    <div class="alert alert-info">
                        <strong><i class="fas fa-info-circle"></i> القسط الشهري المحدد:</strong>
                        <span class="h5 text-primary">@Model.MonthlyQest.ToString("N3") د.ك</span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-money-bill"></i> المبلغ (د.ك) *
                        </label>
                        <input type="number" name="Amount" class="form-control form-control-lg" 
                               step="0.001" value="@Model.MonthlyQest" required />
                        <small class="text-muted">المتبقي: @Model.RemainingAmount.ToString("N3") د.ك</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-tag"></i> نوع الدفعة *
                        </label>
                        <select name="PaymentType" class="form-select" required>
                            <option value="قسط">قسط شهري</option>
                            <option value="مقدم">دفعة مقدمة</option>
                            <option value="إضافي">مبلغ إضافي</option>
                            <option value="نهائي">دفعة نهائية</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-receipt"></i> رقم السند
                        </label>
                        <input type="text" name="SondNumber" class="form-control" maxlength="50" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-sticky-note"></i> ملاحظات
                        </label>
                        <textarea name="Notes" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> حفظ الدفعة
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Progress Chart
        const ctx = document.getElementById('progressChart');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['المدفوع', 'المتبقي'],
                datasets: [{
                    data: [@Model.PaidAmount, @Model.RemainingAmount],
                    backgroundColor: ['#198754', '#dc3545'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}