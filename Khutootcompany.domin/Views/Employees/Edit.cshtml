@model Khutootcompany.Application.DTOs.EmployeeDto

@{
    ViewData["Title"] = "إضافة موظف جديد";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-user-plus"></i> إضافة موظف جديد
        </h1>
        <a href="/Employees" class="btn btn-secondary">
            <i class="fas fa-arrow-right"></i> رجوع للقائمة
        </a>
    </div>

    <form method="post" asp-action="Create">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="row">
            <!-- Right Section: Basic Info -->
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-id-card"></i> البيانات الشخصية</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="CivilId" class="form-label fw-bold">
                                <i class="fas fa-id-badge"></i> الرقم المدني *
                            </label>
                            <input asp-for="CivilId" class="form-control form-control-lg" 
                                   placeholder="12 رقم" maxlength="20" required autofocus />
                            <span asp-validation-for="CivilId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold">
                                <i class="fas fa-user"></i> الاسم الكامل *
                            </label>
                            <input asp-for="FullName" class="form-control" 
                                   placeholder="الاسم الرباعي كامل" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fas fa-phone"></i> رقم الهاتف
                            </label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" 
                                   placeholder="+965 xxxxxxxx" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nationality" class="form-label">
                                <i class="fas fa-flag"></i> الجنسية
                            </label>
                            <select asp-for="Nationality" class="form-select" asp-items="ViewBag.Nationalities">
                                <option value="">-- اختر الجنسية --</option>
                            </select>
                            <span asp-validation-for="Nationality" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Job Info Card -->
                <div class="card shadow mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-briefcase"></i> معلومات الوظيفة</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="JobTitle" class="form-label fw-bold">
                                <i class="fas fa-user-tie"></i> الوظيفة *
                            </label>
                            <select asp-for="JobTitle" class="form-select" asp-items="ViewBag.JobTitles" required>
                                <option value="">-- اختر الوظيفة --</option>
                            </select>
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Salary" class="form-label">
                                <i class="fas fa-money-bill-wave"></i> الراتب (د.ك)
                            </label>
                            <input asp-for="Salary" type="number" step="0.001" class="form-control" 
                                   placeholder="0.000" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="border rounded p-3 bg-light">
                            <h6 class="mb-3"><i class="fas fa-tags"></i> تصنيف الموظف:</h6>
                            
                            <div class="form-check form-switch mb-2">
                                <input asp-for="IsDriver" class="form-check-input" type="checkbox" id="isDriver" />
                                <label class="form-check-label" for="isDriver">
                                    <i class="fas fa-steering-wheel"></i> سائق
                                </label>
                            </div>

                            <div class="form-check form-switch mb-2">
                                <input asp-for="IsCompanyEmployee" class="form-check-input" type="checkbox" id="isCompany" />
                                <label class="form-check-label" for="isCompany">
                                    <i class="fas fa-building"></i> موظف رسمي تابع للشركة
                                </label>
                            </div>

                            <div class="form-check form-switch">
                                <input asp-for="IsPurchasingDriver" class="form-check-input" type="checkbox" id="isPurchasing" />
                                <label class="form-check-label" for="isPurchasing">
                                    <i class="fas fa-credit-card"></i> سائق مشتري (بالتقسيط)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Left Section: Residency & Bank -->
            <div class="col-md-6">
                <!-- Residency Card -->
                <div class="card shadow mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-passport"></i> معلومات الإقامة</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ResidencyStartDate" class="form-label">
                                <i class="fas fa-calendar-plus"></i> تاريخ بداية الإقامة
                            </label>
                            <input asp-for="ResidencyStartDate" type="date" class="form-control" />
                            <span asp-validation-for="ResidencyStartDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResidencyExpiryDate" class="form-label fw-bold">
                                <i class="fas fa-calendar-times"></i> تاريخ انتهاء الإقامة
                            </label>
                            <input asp-for="ResidencyExpiryDate" type="date" class="form-control" />
                            <span asp-validation-for="ResidencyExpiryDate" class="text-danger"></span>
                            <small class="text-muted">سيتم التنبيه قبل الانتهاء بـ 60 و 30 يوم</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 
                            <strong>ملاحظة:</strong> يُفضل تسجيل تاريخ الإقامة لتفعيل التنبيهات التلقائية
                        </div>
                    </div>
                </div>

                <!-- Bank Card -->
                <div class="card shadow mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-credit-card"></i> بطاقة البنك</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="BankCardNumber" class="form-label">
                                <i class="fas fa-hashtag"></i> رقم البطاقة
                            </label>
                            <input asp-for="BankCardNumber" class="form-control" 
                                   placeholder="xxxx-xxxx-xxxx-xxxx" maxlength="30" />
                            <span asp-validation-for="BankCardNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BankCardExpiryMonth" class="form-label">
                                    <i class="fas fa-calendar"></i> شهر الانتهاء
                                </label>
                                <select asp-for="BankCardExpiryMonth" class="form-select">
                                    <option value="">-- الشهر --</option>
                                    @for (int i = 1; i <= 12; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BankCardExpiryYear" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> سنة الانتهاء
                                </label>
                                <select asp-for="BankCardExpiryYear" class="form-select">
                                    <option value="">-- السنة --</option>
                                    @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notes Card -->
                <div class="card shadow mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-sticky-note"></i> ملاحظات</h5>
                    </div>
                    <div class="card-body">
                        <textarea asp-for="Notes" class="form-control" rows="5" 
                                  placeholder="أي ملاحظات أو معلومات إضافية عن الموظف..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> حفظ الموظف
                    </button>
                    <a href="/Employees" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> إلغاء
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Auto-format phone number
            $('#PhoneNumber').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 0 && !value.startsWith('965')) {
                    $(this).val('+965' + value);
                }
            });

            // Auto-enable purchasing driver when not company employee
            $('#isCompany').on('change', function() {
                if (!$(this).is(':checked')) {
                    $('#isPurchasing').prop('checked', true);
                }
            });

            // Driver checkbox logic
            $('#isDriver').on('change', function() {
                if ($(this).is(':checked')) {
                    // Show driver-related options
                    console.log('Driver mode enabled');
                } else {
                    $('#isPurchasing').prop('checked', false);
                }
            });
        });
    </script>
}