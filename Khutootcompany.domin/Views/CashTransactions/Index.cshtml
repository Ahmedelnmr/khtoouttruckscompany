@model IEnumerable<Khutootcompany.Application.DTOs.CashTransactionDto>

@{
    ViewData["Title"] = "حركات الصندوق";
    var balance = ViewBag.CurrentBalance ?? 0m;
    var filterTitle = ViewBag.FilterTitle ?? "جميع الحركات";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-money-bill-wave"></i> حركات الصندوق
        </h1>
        <div>
            <div class="alert alert-@(balance >= 0 ? "success" : "danger") mb-0 py-2 px-3 d-inline-block">
                <strong>
                    <i class="fas fa-wallet"></i> الرصيد الحالي: 
                    @balance.ToString("N3") د.ك
                </strong>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <a href="/CashTransactions/Create" class="btn btn-success ms-2">
                    <i class="fas fa-plus"></i> إضافة حركة جديدة
                </a>
            }
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="fas fa-filter"></i> فلترة وبحث
            </h5>
            
            <!-- Quick Filters -->
            <div class="mb-3">
                <div class="btn-group flex-wrap" role="group">
                    <a href="/CashTransactions" class="btn btn-outline-primary">
                        <i class="fas fa-list"></i> الكل
                    </a>
                    <a href="/CashTransactions?type=قسط" class="btn btn-outline-success">
                        <i class="fas fa-credit-card"></i> أقساط
                    </a>
                    <a href="/CashTransactions?type=وكالة" class="btn btn-outline-info">
                        <i class="fas fa-file-contract"></i> وكالات
                    </a>
                    <a href="/CashTransactions?type=تأمين" class="btn btn-outline-warning">
                        <i class="fas fa-shield-alt"></i> تأمينات
                    </a>
                    <a href="/CashTransactions?type=سلفة" class="btn btn-outline-danger">
                        <i class="fas fa-hand-holding-usd"></i> سلف
                    </a>
                </div>
            </div>

            <!-- Date Range Filter -->
            <form method="get" action="/CashTransactions" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate">
                </div>
                <div class="col-md-4">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate">
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">
                        <i class="fas fa-search"></i> بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-arrow-down"></i> إجمالي القبض
                    </h5>
                    <h3 class="mb-0">
                        @Model.Where(t => t.IsIncome).Sum(t => t.Amount).ToString("N3") د.ك
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-arrow-up"></i> إجمالي الصرف
                    </h5>
                    <h3 class="mb-0">
                        @Model.Where(t => t.IsExpense).Sum(t => Math.Abs(t.Amount)).ToString("N3") د.ك
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-calculator"></i> الصافي
                    </h5>
                    <h3 class="mb-0">
                        @Model.Sum(t => t.Amount).ToString("N3") د.ك
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> @filterTitle
                <span class="badge bg-light text-dark">@Model.Count() حركة</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="cashTable" class="table table-bordered table-hover" style="width:100%">
                    <thead class="table-dark">
                        <tr>
                            <th>ت</th>
                            <th>التاريخ</th>
                            <th>النوع</th>
                            <th>المبلغ (د.ك)</th>
                            <th>الموظف</th>
                            <th>الشاحنة</th>
                            <th>الوصف</th>
                            <th>رقم السند</th>
                            <th>ملاحظات</th>
                            <th>المستخدم</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>إجراءات</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var trans in Model)
                        {
                            var rowClass = trans.IsIncome ? "table-success-subtle" : "table-danger-subtle";
                            
                            <tr class="@rowClass">
                                <td>@index</td>
                                <td>@trans.TransactionDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-secondary">@trans.TypeDisplay</span>
                                </td>
                                <td>
                                    <strong class="@(trans.IsIncome ? "text-success" : "text-danger")">
                                        @if (trans.IsIncome)
                                        {
                                            <i class="fas fa-arrow-down"></i>
                                            <text>+</text>
                                        }
                                        else
                                        {
                                            <i class="fas fa-arrow-up"></i>
                                        }
                                        @Math.Abs(trans.Amount).ToString("N3")
                                    </strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(trans.EmployeeName))
                                    {
                                        <a href="/Employees/Details/@trans.EmployeeId" class="text-decoration-none">
                                            <i class="fas fa-user"></i> @trans.EmployeeName
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(trans.TruckPlate))
                                    {
                                        <a href="/Trucks/Details/@trans.TruckId" class="text-decoration-none">
                                            <i class="fas fa-truck"></i> @trans.TruckPlate
                                        </a>
                                    }
                                </td>
                                <td>@trans.Description</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(trans.SondNumber))
                                    {
                                        <span class="badge bg-info">@trans.SondNumber</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(trans.Notes))
                                    {
                                        <small class="text-muted">@trans.Notes</small>
                                    }
                                </td>
                                <td>
                                    <small>
                                        <i class="fas fa-user-shield"></i> @trans.CreatedBy
                                    </small>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm">
                                            <a href="/CashTransactions/Edit/@trans.TransactionId" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> تعديل
                                            </a>
                                         <form asp-action="DeleteConfirmed" asp-route-id="@trans.TransactionId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm" 
                                                        onclick="return confirm('هل أنت متأكد من حذف هذه الحركة؟');">
                                                    <i class="fas fa-trash"></i> حذف
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                }
                            </tr>
                            index++;
                        }
                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <td colspan="3" class="text-end"><strong>الإجمالي:</strong></td>
                            <td colspan="@(User.IsInRole("Admin") ? "8" : "7")">
                                <strong class="text-success">
                                    قبض: @Model.Where(t => t.IsIncome).Sum(t => t.Amount).ToString("N3") د.ك
                                </strong>
                                |
                                <strong class="text-danger">
                                    صرف: @Model.Where(t => t.IsExpense).Sum(t => Math.Abs(t.Amount)).ToString("N3") د.ك
                                </strong>
                                |
                                <strong class="text-primary">
                                    الصافي: @Model.Sum(t => t.Amount).ToString("N3") د.ك
                                </strong>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="card mt-3">
        <div class="card-body">
            <h6 class="card-title">
                <i class="fas fa-download"></i> تصدير البيانات
            </h6>
            <div class="btn-group">
                <button onclick="exportToExcel()" class="btn btn-success">
                    <i class="fas fa-file-excel"></i> تصدير Excel
                </button>
                <button onclick="exportToPDF()" class="btn btn-danger">
                    <i class="fas fa-file-pdf"></i> تصدير PDF
                </button>
                <button onclick="window.print()" class="btn btn-primary">
                    <i class="fas fa-print"></i> طباعة
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> تأكيد الحذف
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف هذه الحركة المالية؟</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> 
                    <strong>تحذير:</strong> سيؤثر هذا على رصيد الصندوق ولا يمكن التراجع عنه!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> تأكيد الحذف
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#cashTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"
                },
                "pageLength": 50,
                "order": [[1, "desc"]],
                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ],
                "dom": 'Bfrtip',
                "buttons": []
            });
        });

        function confirmDelete(transactionId) {
            $('#deleteForm').attr('action', '/CashTransactions/delete/' + transactionId);
            $('#deleteModal').modal('show');
        }

        function exportToExcel() {
            $('#cashTable').DataTable().button('.buttons-excel').trigger();
        }

        function exportToPDF() {
            window.location.href = '/Reports/GenerateMonthlyCashReport?year=' + new Date().getFullYear() + '&month=' + (new Date().getMonth() + 1);
        }
    </script>
}

<style>
    .table-success-subtle {
        background-color: #d1e7dd !important;
    }
    .table-danger-subtle {
        background-color: #f8d7da !important;
    }
    
    @@media print {
        .btn, .card-header, .sidebar, .navbar, footer {
            display: none !important;
        }
    }
</style>